<div class="container">
  <div class="row">
    <div class="task-user-image col-sm-2 text-center mt-5">
      <= attachment_image_tag @task.custmer, :image, fallback: "shutterstock_1013274682.png", class: "rounded-circle", size: "150x150" %>
    </div>
    <div class="task-post col-sm-8 mt-5 mx-auto">
      <div class="border border-secondary">
        <div class="container">
          <div class="col-sm-5 mt-3">
            <strong><%= @task.task_name %></strong> [ <= @task.custmer.name %> ]
          </div>
          <div class="col-sm-10 mt-3">
            : <%= @task.task_body %>
          </div>
        </div>
        <!--ここからコメント表示-->
      </div>
    </div>
  </div>
</div>